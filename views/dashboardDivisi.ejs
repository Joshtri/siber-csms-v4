<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-include('partials/links'); %>
</head>
<body>
    <%-include('partials/header_divisi'); %>
    
    <main id="main" class="mb-4">
        <!-- START DASHBOARD - DEFAULT CONTENT-->
        <div id="content-container">
    
          <section id="breadcrumbs" class="py-3 bg-light">
            <div class="container">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h2 class="fw-bold">Data Mitra - HSE PLAN</h2>
              </div>
              
              <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/dashboard_divisi">
                      <i class="bi bi-house me-1"></i>Dashboard Pertamina
                    </a>
                  </li>

                </ol>
              </nav>
            </div>
          </section>
          <!-- End Breadcrumbs -->
    
          <section id="portfolio-details" class="portfolio-details mt-5">
            <div class="container">
              <div class="row">
                <div class="col-3">
                  <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">Pengusulan :</h5>
                      <hr>
                      <h5 class="text-center">5</h5>
                      <p class="card-text small fw-light">Lihat Detail <i class="fa-solid fa-up-right-from-square fa-bounce"></i></p>
                    </div>
                  </div>
                </div>
          
                <div class="col-3">
                  <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">Verifikasi User :</h5>
                      <hr>
                      <h5 class="text-center">6</h5>
                      <p class="card-text small fw-light" onmouseover="showCardVerifikasiUser()" onmouseout="hideCardVerifikasiUser()">Lihat Detail <i class="fa-solid fa-up-right-from-square fa-bounce"></i></p>
                    </div>
                    <!-- Card untuk ditampilkan saat hover -->
                    <div id="card-verifikator-user" class="card-body animate__animated" style="display: none;">
                      <!-- Isi card disini -->
                      <h6 class="card-title fw-bold">Ikhtisar Data</h6><br>
                      <p class="card-text">HSE Plan : <%=  %></p>
                      <p class="card-text">PSB : <%=  %></p>
                      <p class="card-text">PA : <%=  %></p>
                      <p class="card-text">PB : <%=  %></p>
                    </div>
                  </div>
                </div>
          
                <div class="col-3">
                  <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">Verifikasi HSSE :</h5>
                      <hr>
                      <h5 class="text-center">4</h5>
                      <p class="card-text small fw-light"><i class="fa-solid fa-up-right-from-square fa-bounce hidden"></i></p>
                    </div>
                  </div>
                </div>
          
                <div class="col-3">
                  <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">Usulan di Tolak :</h5>
                      <hr>
                      <h5 class="text-center">5</h5>
                      <p class="card-text small fw-light"><i class="fa-solid fa-up-right-from-square fa-bounce hidden"></i></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
          
          <!-- END KOTAK KHUSUS DASHBOARD -->
        </div>
        <!-- END DASHBOARD -->
    
    

    

    
        <!-- END MENU MITRA -->
              
        <!-- Modal -->
        <div class="modal fade" id="detailPengusul" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Pengusul Berkas</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <table class="table table-striped table-light">
                  <tbody class="">
                    <tr>
                      <td>HSE PLAN : </td>
                      <td><%=  %> Berkas</td>
                    </tr>
    
                    <tr>
                      <td>PSB : </td>
                      <td><%=  %> Berkas</td>
                    </tr>
    
                    <tr>
                      <td>PB : </td>
                      <td> <%=  %> Berkas</td>
                    </tr>
    
                    <tr>
                      <td>PA : </td>
                      <td><%=  %> Berkas</td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                <!-- <button type="button" class="btn btn-primary">Understood</button> -->
              </div>
            </div>
          </div>
        </div>
    </main><!-- End #main -->
    <!-- <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script> -->
    <script src="/js/cardShow.js"></script>

</body>
</html>